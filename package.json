{
  "name": "matrix-on-vscode",
  "displayName": "Matrix on VScode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "matrix-on-vscode.helloWorld",
        "category": "matrix-on-vscode",
        "title": "Hello VScode"
      },
      {
        "command": "matrix-on-vscode.showTime",
        "category": "matrix-on-vscode",
        "title": "Show Time"
      },
      {
        "command": "matrix-on-vscode.signin",
        "category": "matrix-on-vscode",
        "title": "Matrix: Sign In"
      },
      {
        "command": "matrix-on-vscode.refreshCourses",
        "category": "matrix-on-vscode",
        "title": "Matrix: Refresh Courses"
      },
      {
        "command": "matrix-on-vscode.refreshCourseAssignments",
        "category": "matrix-on-vscode",
        "title": "Matrix: Refresh Assignments"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "matrixView",
          "title": "Matrix",
          "icon": "resources/favicon.svg"
        }
      ]
    },
    "views": {
      "matrixView": [
        {
          "id": "matrixExplorerView",
          "icon": "resources/login.svg",
          "name": "Problems"
        }
      ]
    }, 
    "keybindings": [
      {
        "command": "matrix-on-vscode.helloWorld",
        "key": "ctrl+f10",
        "mac": "cmd+f10",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "matrix-on-vscode.helloWorld",
          "group": "navigation"
        },
        {
          "when": "editorFocus",
          "command": "matrix-on-vscode.showTime",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "matrix-on-vscode.refreshCourses",
          "when": "view == matrixExplorerView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "matrix-on-vscode.refreshCourseAssignments",
          "icon": "resources/refresh.svg",
          "when": "view == matrixExplorerView && viewItem == matrix.course",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "node-fetch": "2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  },
  "keybindings": [
    {
      "command": "extension.sayHello",
      "key": "ctrl+f10",
      "mac": "cmd+f10",
      "when": "editorTextFocus"
    }
  ],
  "menus": {
    "editor/context": [
      {
        "when": "editorFocus",
        "command": "extension.sayHello",
        "group": "navigation"
      }
    ]
  },
  "dependencies": {
    "js-base64": "^3.7.8",
    "prettier": "^3.6.2"
  }
}
